<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@drawable/fon_activity"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_date"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/date"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 февраля 2024"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"/>


        <ImageView
            android:id="@+id/step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/step" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_shagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0/"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_cel_shagi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="10000"
                android:textColor="@color/white" />
        </LinearLayout>


        <ImageView
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/steps" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/km"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/none_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="7dp"
                    android:text="0"
                    android:textColor="@color/none"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_ckal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/kal"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/none_kkal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="7dp"
                    android:text="0"
                    android:textColor="@color/none"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/min"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/none_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="7dp"
                    android:text="0"
                    android:textColor="@color/none"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fon_menu"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/menu_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/map"
                    android:contentDescription="menu"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/menu_analitic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/resource_static"
                    android:contentDescription="menu"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/menu_mmhome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:contentDescription="menu"
                    android:gravity="center"
                    android:src="@drawable/mm_home" />

                <ImageButton
                    android:id="@+id/menu_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/prof"
                    android:contentDescription="menu"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/menu_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/settings"
                    android:contentDescription="menu"
                    android:gravity="center" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>